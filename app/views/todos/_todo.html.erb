<tr id="<%= dom_id(todo) %>">
  <td class="border-b p-2" width="1%">
    <%= fields_for(todo) do |f| %>
      <%= f.check_box :completed?, { data: { reflex: 'change->TodosReflex#toggle', sgid: todo.to_sgid.to_s } } %>
    <% end %>
  </td>
  <td class="border-b p-2">
    <%= link_to todo.description, edit_todo_path(todo), class: ['text-blue-500 hover:underline', ('line-through text-gray-500' if todo.completed?)] %>
  </td>
  <td class="border-b p-2">
    <%= l(todo.completed_at, format: :short) if todo.completed_at.present? %>
  </td>
</tr>
