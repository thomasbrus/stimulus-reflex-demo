{
  "name": "app",
  "private": "true",
  "dependencies": {
    "@hotwired/stimulus": "^3.0.1",
    "@hotwired/turbo-rails": "^7.1.1",
    "esbuild": "^0.14.14"
  },
  "devDependencies": {
    "postcss": "^8.4.5",
    "postcss-cli": "^9.1.0",
    "tailwindcss": "^3.0.18"
  },
  "scripts": {
    "build": "esbuild app/javascript/application/bundle.js --sourcemap --bundle --outdir=app/assets/builds --outbase=app/javascript",
